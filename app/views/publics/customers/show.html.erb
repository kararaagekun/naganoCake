<div class="container mt-5">
  <h2>マイページ</h2>
    <div class="row mt-3">
      <h4><strong>登録情報</strong></h4>
      <div class="col ml-4">
        <%= link_to "編集する", edit_publics_customers_path, class: "btn btn-success" %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-7 mt-3 mb-3">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th style="background-color: #CCCCCC;">氏名</th>
              <td><%= @customer.last_name %><%= @customer.first_name %></td>
            </tr>
            <tr>
              <th style="background-color: #CCCCCC;">カナ</th>
              <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
            </tr>
              <th style="background-color: #CCCCCC;">郵便番号</th>
              <td><%= @customer.post_code %></td>
            </tr>
            </tr>
              <th style="background-color: #CCCCCC;">住所</th>
              <td><%= @customer.address %></td>
            </tr>
            </tr>
              <th style="background-color: #CCCCCC;">電話番号</th>
              <td><%= @customer.phone_number %></td>
            </tr>
             </tr>
              <th style="background-color: #CCCCCC;">メールアドレス</th>
              <td><%= @customer.email %></td>
            </tr>
          </thead>
        </table>
      </div>
    </div>

      <div class="row mb-3">
        <h4><strong>配送先</strong></h4>
        <div class="col ml-5">
          <%= link_to "一覧を見る", publics_shipping_addresses_path, class: "btn btn-primary" %>
        </div>
      </div>
      <div class="row">
        <h4><strong>注文履歴</strong></h4>
        <div class="col ml-4">
          <%= link_to "一覧を見る", publics_orders_path, class: "btn btn-primary" %>
        </div>
      </div>
</div>