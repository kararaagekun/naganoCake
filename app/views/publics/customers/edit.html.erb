<div class="container mt-5">
  <h3>会員情報編集</h3>

  <%= form_with model: @customer, url: publics_customers_path, method: :patch do |f| %>

    <div class="row mt-3 ml-5">
      <%= f.label "氏名", class: "col-2 mr-3" %>
      <%= f.text_field :last_name, class: "col-2 mr-3" %>
      <%= f.text_field :first_name, class: "col-2" %>
    </div>

    <div class="row mt-3 ml-5">
      <%= f.label "フリガナ", class: "col-2 mr-3" %>
      <%= f.text_field :last_name_kana, class: "col-2 mr-3" %>
      <%= f.text_field :first_name_kana, class: "col-2" %>
    </div>

    <div class="row mt-3 ml-5">
      <%= f.label "郵便番号", class: "col-2 mr-3" %>
        <%= f.text_field :post_code, class: "col-2" %>
    </div>

    <div class="row mt-3 ml-5">
      <%= f.label "住所", class: "col-2 mr-3" %>
      <%= f.text_field :address, :size=>"50" %>
    </div>

    <div class="row mt-3 ml-5">
      <%= f.label "電話番号", class: "col-2 mr-3" %>
      <%= f.text_field :phone_number, class: "col-2" %>
    </div>

    <div class="row mt-3 ml-5">
      <%= f.label "メールアドレス", class: "col-2 mr-3" %>
      <%= f.text_field :email, class: "col-2" %>
    </div>

      <div class="mt-3 text-center">
        <%= f.submit "編集内容を保存", class: "btn btn-success mr-5"  %>
        <%= link_to "退会する", publics_customers_exit_path, class: "btn btn-danger ml-5" %>
      </div>
    <% end %>
</div>