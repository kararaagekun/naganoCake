<div class="container mt-5">
  <div class="row">
    <div class="col col-xl-3 text-center">
      <h2 class="bg-light text-black">会員情報編集</h2>
    </div>
  </div>
  <%= form_with model: @customer, url: publics_customers_path, method: :patch do |f| %>

  <%= render "public/shared/error_messages", resource: @customer %>

    <div class="row mt-3 ml-5">
      <%= f.label "氏名", class: "col-2 mr-3" %>
      <%= f.text_field :last_name, class: "mr-3" %>
      <%= f.text_field :first_name %>
    </div>

    <div class="row mt-3 ml-5">
      <%= f.label "フリガナ", class: "col-2 mr-3" %>
      <%= f.text_field :last_name_kana, class: "mr-3" %>
      <%= f.text_field :first_name_kana %>
    </div>

    <div class="row mt-3 ml-5">
      <%= f.label "郵便番号", class: "col-2 mr-3" %>
        <%= f.text_field :post_code %>
    </div>

    <div class="row mt-3 ml-5">
      <%= f.label "住所", class: "col-2 mr-3" %>
      <%= f.text_field :address, :size=>"50" %>
    </div>

    <div class="row mt-3 ml-5">
      <%= f.label "電話番号", class: "col-2 mr-3" %>
      <%= f.text_field :phone_number %>
    </div>

    <div class="row mt-3 ml-5">
      <%= f.label "メールアドレス", class: "col-2 mr-3" %>
      <%= f.text_field :email %>
    </div>

      <div class="mt-3 text-center">
        <%= f.submit "編集内容を保存", class: "btn btn-success mr-5"  %>
        <%= link_to "退会する", publics_customers_exit_path, class: "btn btn-danger ml-5" %>
      </div>
    <% end %>
</div>