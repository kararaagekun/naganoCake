<div class="container mt-5">
  <div class="row">
    <div class="col col-xl-5 text-center">
      <h2 class="bg-light text-black">会員の方はこちらからログイン</h2>
    </div>
  </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= alert %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "\uf0e0", class: 'fa' %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password",  placeholder: "\uf023", class: 'fa' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
  <% end %>
<div class="row">
  <div class="col-xs-5 mt-3 text-center">
    <h4 class="bg-light text-black">登録がお済でない方</h4>
      <%= render "public/shared/links" %>から新規登録を行ってください
  </div>
</div>
</div>
