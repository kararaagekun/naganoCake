<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="form-group">
    名前
    <div class="field">
      (姓)<%= f.text_field :last_name %>
    </div>
    <div class="field">
      (名)<%= f.text_field :first_name %>
    </div>
  </div>

  <div class="form-group">
    フリガナ
    <div class="field">
      (セイ)<%= f.text_field :last_name_kana %>
    </div>
    <div class="field">
      (メイ)<%= f.text_field :first_name_kana %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      郵便番号(ハイフンなし)
      <%= f.text_field :post_code %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      住所
      <%= f.text_field :address %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      電話番号(ハイフンなし)
      <%= f.text_field :phone_number %>
    </div>
  </div>

  <div class="field">
    パスワード(6文字以上)
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    パスワード(確認用)<br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>からログインしてください
