<div class="container mt-5">
  <div class="row">
    <div class="col col-xl-3 text-center">
      <h2 class="bg-light text-black">新規会員登録</h2>
    </div>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<div class="row ml-5">
        <label class="col-lg-3">名前</label>
        <div class="col-lg-3">
          <%= f.text_field :last_name,autoforcus: true, autocomplete: "last_name",  placeholder: "(姓)" %>
        </div>
        <div class="col-lg-3">
          <%= f.text_field :first_name,autoforcus: true, autocomplete: "first_name",  placeholder: "(名)" %>
        </div>
      </div><br>

      <div class="row ml-5">
        <label class="col-lg-3">フリガナ</label>
        <div class="col-lg-3">
          <%= f.text_field :last_name_kana,autoforcus: true, autocomplete: "last_name_kana",  placeholder: "(セイ)" %>
        </div>
        <div class="col-lg-3">
          <%= f.text_field :first_name_kana,autoforcus: true, autocomplete: "first_name_kana",  placeholder: "(メイ)" %>
        </div>
      </div><br>


      <div class="row ml-5">
        <label class="col-lg-3">メールアドレス</label>
        <div class="col-lg-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div><br>


      <div class="row ml-5">
        <label class="col-lg-3">郵便番号（ハイフンなし）</label>
        <div class="col-lg-3">
          <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
        </div>
      </div><br>


      <div class="row ml-5">
        <label class="col-lg-3">住所</label>
        <div class="col-lg-6">
          <%= f.text_field :address, autofocus: true, autocomplete: "address", :size=>"60" %>
        </div>
      </div><br>


      <div class="row ml-5">
        <label class="col-lg-3">電話番号（ハイフンなし）</label>
        <div class="col-lg-3">
          <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
        </div>
      </div><br>


      <div class="row ml-5">
        <label class="col-lg-3">パスワード
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %></label>
        <div class="col-lg-3">
          <%= f.password_field :password, autocomplete: "encrypted_password" %>
        </div>
      </div><br>


      <div class="row ml-5">
        <label class="col-lg-3">パスワード（確認用）</label>
        <div class="col-lg-3">
          <%= f.password_field :password_confirmation, autocomplete: "encrypted_password" %>
        </div>
      </div><br>

     <div class="row ml-5">
      <div class="actions col-lg-3">
        <%= f.submit "新規登録", class:'btn btn-success'%>
      </div>
       <%= render "public/shared/links" %><p>からログインしてください</p>
      </div>

  <% end %>
</div>
