<div class="container">
  <div class="row">
    <div class="col col-xl-2 text-center">
      <br><h4 class="bg-light text-black">商品新規登録</h4>
    </div>
    <div class="col col-xl-8">
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= form_with model: @product, url: admins_products_path  do |f| %>
        <%= render "public/shared/error_messages", resource: @product %>
        <div class="form-group">
          <%= f.label :商品画像 %>
          <%= f.file_field :image, class: "form-control-file product_image", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.label :商品名 %>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :商品説明 %>
          <%= f.text_field :introduction, class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.label :ジャンル %>
          <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), include_blank: "--選択してください--" %>
        </div>
        <div class="form-group">
          <%= f.label :税抜価格 %>
          <%= f.text_field :price, class: "form-control price" %>
        </div>
        <div class="form-group">
          <%= f.label :販売ステータス %>
          <%= f.radio_button :is_actice, "false" %>
          <%= f.label :is_actice, "販売中" %>
          <%= f.radio_button :is_actice, "true" %>
          <%= f.label :is_actice, "販売停止中" %>
        </div>
        <div class="form-group">
          <%= f.submit "新規登録", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>