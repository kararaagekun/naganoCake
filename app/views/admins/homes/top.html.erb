<div class="container mt-5">
  <div class="row">
    <div class="col3">
      <h2 class="bg-light text-black">注文一覧</h2>

        <div class="order-table mt-4">
          <table class="table">
            <thead>
              <tr>
                <th>購入日時</th>
                <th>購入者</th>
                <th>注文個数</th>
                <th>注文ステータス</th>
              </tr>
            </thead>

            <tbody>
              <% @orders.each do |order| %>
                <tr>
                  <td><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M:%S"), admins_order_path(order) %></td> <!--order.created_at.strftime("%Y-%m-%d %H:%M:%S")で購入日時を表示-->
                  <td><%= order.customer.last_name + "  " + order.customer.first_name %></td>
                  <td><%= order.order_products.sum(:amount) %></td>
                  <td><%= order.status %></td>
                </tr>
                <% end %>

            </tbody>
          </table>
        </div>
      </div>
    </div>
</div>