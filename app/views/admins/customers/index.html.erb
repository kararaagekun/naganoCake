<div class="container mt-3">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 mx-auto">
      <h2>会員一覧</h2>

      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.last_name + "　"  + customer.first_name,admins_customer_path(customer) %></td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_deleted == false %>
                <p class="text-success">有効</p>
                <% else %>
                <p class="text-danger">無効</p>
                <% end %>
              </td>
            </tr>
            <% end %>
            
        </tbody>
      </table>
    </div>
  </div>
</div>