<div class="container mt-3">
    <div class="row mx-auto">
      <div class="col-lg-10 col-lg-offset-1">
          <h2>会員情報詳細</h2>
            <table class="table">
    
                <tr>
                  <th class="col-xs-2">会員ID</th>
                  <td class="col-xs-10"><%= @customer.id %>
                  </td>
                </tr>
    
                <tr>
                  <th>氏名</th>
                  <td><%= @customer.last_name %>
                  <%= @customer.first_name %></td>
                </tr>
    
                <tr>
                  <th>フリガナ</th>
                  <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
                </tr>
    
                <tr>
                  <th>郵便番号</th>
                  <td><%= @customer.post_code %></td>
                </tr>
    
                <tr>
                  <th>住所</th>
                  <td><%= @customer.address %></td>
                </tr>
    
                <tr>
                  <th>電話番号</th>
                  <td><%= @customer.phone_number %></td>
                </tr>
    
                <tr>
                  <th>メールアドレス</th>
                  <td><%= @customer.email %></td>
                </tr>
                
                <tr>
                  <th>会員ステータス</th>
                  <td>
                  <% if @customer.is_deleted == false %>
                    <span class="label label-primary">
                      <p class="text-success">有効会員</p>
                    </span>
                    <% else %>
                    <span class="label label-danger">
                      <p class="text-danger">無効会員</p>
                    </span>
                  <% end %>
                  </td>
                </tr>
            </table>
    
            <div>
              <%= link_to "編集する", edit_admins_customer_path(@customer), class: "btn btn-success" %>
              <!--%= link_to "注文一覧を見る",admins_orders_path, class: "btn btn-success" %-->
            </div>
      </div>
    </div>
</div>